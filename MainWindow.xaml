    <StackPanel Margin="20">
        <Label Target="{Binding ElementName=txtNew}">
            <Button Name="BtnNew" Content="_New" Width="155" Margin="90,0" Click="BtnNew_Click"/>
        </Label>
        <Label Target="{Binding ElementName=txtOpen}">
            <Button Name="BtnOpen" Content="_Open" Width="155" Margin="90,0" Click="BtnOpen_Click"/>
        </Label>
        <Label Target="{Binding ElementName=txtSave}">
            <Button Name="BtnSave" Content="_Save" Width="155" Margin="90,0" Click="BtnSave_Click"/>
        </Label>
        <Label Target="{Binding ElementName=txtSave}">
            <Button Name="BtnSaveAs" Content="Save _As" Width="155" Margin="90,0" Click="BtnSaveAs_Click"/>
